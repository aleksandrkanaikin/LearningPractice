<Page x:Class="TNS_2.Pages.StatusControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TNS_2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatusControlPage">

    <Grid>
        <Grid.RowDefinitions>
             <RowDefinition Height="150"></RowDefinition>
             <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

            <TextBlock Text="Управление оборудованием"
                   Grid.Row="0"
                   FontSize="26"
                   Margin="30,30,0,0"></TextBlock>

        <StackPanel Grid.Row="1">
            <Button x:Name="StatusControl_Btn" Width="320" Height="50" Content="Контроль состояния" FontSize="16"
                    Margin="0,50,0,0"></Button>
            <Button x:Name="SettingEquip_Btn" Width="320" Height="50" Content="Настройка оборудования" FontSize="16"
                    Margin="0,20,0,0"></Button>
            <Button x:Name="CalcBaseStation_Btn" Width="320" Height="50" Content="Расчет количества базовых станций" FontSize="16"
                    Margin="0,20,0,0" Click="CalcBaseStation_Btn_Click"></Button>
        </StackPanel>
        </Grid>
</Page>
