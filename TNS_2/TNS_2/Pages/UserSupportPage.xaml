<Page x:Class="TNS_2.Pages.UserSupportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TNS_2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserSupportPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Поддержка пользователей" Grid.Row="0" FontSize="26" Margin="30,30,0,0"></TextBlock>
        <TextBlock Text="Выбор абонента:" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,50,0,0" Height="16" Width="94"/>
        <ComboBox x:Name="UsersComboBox" Text="ФИО абонента" IsEditable="True" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="110,50,0,0" IsReadOnly="True" Height="22" Width="108"/>
        <TextBlock Text="Заявки абонента:" IsEnabled="True" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="16" Width="95" Margin="10"/>

        <DataGrid x:Name="SupportDataGrid" AutoGenerateColumns="True" IsReadOnly="True" Grid.Row="1"/>

    </Grid>
</Page>
